<%- include ("../partials/header.ejs") %>
<div class="container">
    <h1 style="text-align: center;"> Edit <%= camp.name %> </h1>
    <div class="row">

        <div style="width: 50%; margin: 30px auto;">
            <form action="/campgrounds/<%=camp._id%>/?_method=PUT" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=camp.name%>"  name="camp[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=camp.image%>"  name="camp[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]"  value="<%=camp.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=camp.description%>"  name="camp[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block border-dark">Submit</button>
                </div>
            </form>
            <a href="/campgrounds"> Go back </a> 
        </div>
    </div>


</div>
<%- include ("../partials/footer.ejs") %>