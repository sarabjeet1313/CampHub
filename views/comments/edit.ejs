<%- include ("../partials/header.ejs") %>
<div class="container">
    <h1 style="text-align: center;"> Edit Comment</h1>
    <div class="row">

        <div style="width: 50%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text%>"  name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block border-dark">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>"> Go back </a> 
        </div>
    </div>


</div>
