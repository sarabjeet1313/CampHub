<%- include ("../partials/header.ejs") %>
<div class="container">
    <h1 style="text-align: center;"> Create a new Comment for <%= camp.name %></h1>
    <div class="row">

        <div style="width: 50%; margin: 30px auto;">
            <form action="/campgrounds/<%= camp._id %>/comments" method="POST"> 
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment"  name="comment[text]">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" placeholder="author"  name="comment[author]">
                </div> -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block border-dark">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %>"> Go back </a> 
        </div>
    </div>


</div>
<%- include ("../partials/footer.ejs") %>